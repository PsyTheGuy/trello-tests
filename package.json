    "allure-commandline": "^2.32.0",
    "chai": "^5.1.2",
    "chromedriver": "^131.0.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "geckodriver": "^5.0.0",
    "globals": "^15.14.0",
    "mocha": "^11.0.1",
